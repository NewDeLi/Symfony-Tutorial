{% extends 'base.html.twig' %}

{% block title %}Create something new | {{ parent() }}{% endblock %}

{% block body %}

    <h1>{{ title }}</h1>
    <h3>Loop over an Array</h3>
    {{ dump() }}
    <ol>
        {% for track in tracks %}
            <li>
                {{ track.song }} - {{ track.artist | upper }}
            </li>
        {% endfor %}
    </ol>

    <ul>
        {% for index, track in tracks %}
            <li>{{ track.song }} - {{ track.artist }}</li>
        {% endfor %}
    </ul>

{% endblock %}
